@page "/client/order-assets"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using ToroTrack.Components.Layout
@using ToroTrack.Data
@using ToroTrack.Data.Entities
@rendermode InteractiveServer

@attribute [Authorize(Roles = "Client")]

@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject AuthenticationStateProvider AuthStateProvider
@inject UserManager<ApplicationUser> UserManager
@inject ILogger<OrderAssets> Logger

<PageTitle>Order Assets | Toro Track</PageTitle>

<div class="page-shell">
    <header class="content-header">
        <div class="header-left">
            <h1 class="page-title">Order Assets</h1>
            <p class="page-subtitle">Request new hardware and software licenses for your team.</p>
        </div>
        <div class="header-right">
            <div class="cart-summary" @onclick="OpenCartModal">
                <span class="bi bi-cart3 cart-icon"></span>
                <span class="cart-count">@Cart.Count</span>
                <span class="cart-total">R @Cart.Sum(i => i.Cost).ToString("N0")</span>
            </div>
        </div>
    </header>

    @* CATEGORY TABS *@
    <div class="category-tabs">
        <button class="tab-btn @(ActiveCategory == "All" ? "active" : "")" @onclick='() => ActiveCategory = "All"'>All</button>
        <button class="tab-btn @(ActiveCategory == "Hardware" ? "active" : "")" @onclick='() => ActiveCategory = "Hardware"'>Hardware</button>
        <button class="tab-btn @(ActiveCategory == "Software" ? "active" : "")" @onclick='() => ActiveCategory = "Software"'>Software</button>
    </div>

    @* PRODUCT GRID *@
    <div class="product-grid">
        @if (isLoading)
        {
            <div class="col-12 text-center p-5">
                <div class="spinner-border text-primary" role="status"></div>
                <p class="mt-2 text-muted">Loading catalog...</p>
            </div>
        }
        else if (!FilteredCatalog.Any())
        {
            <div class="col-12 text-center p-5">
                <p class="text-muted">No items found in this category.</p>
            </div>
        }
        else
        {
            @foreach (var item in FilteredCatalog)
            {
                <div class="product-card">
                    <div class="product-icon">
                        @if (item.Category == "Hardware")
                        {
                            <span class="bi bi-laptop"></span>
                        }
                        else
                        {
                            <span class="bi bi-disc"></span>
                        }
                    </div>
                    <div class="product-info">
                        <h5>@item.Name</h5>
                        <p>@item.Description</p>
                        <div class="stock-indicator @(item.StockQuantity > 0 ? "in-stock" : "out-stock")">
                            @if (item.StockQuantity > 0)
                            {
                                <span>In Stock (@item.StockQuantity)</span>
                            }
                            else
                            {
                                <span>Out of Stock</span>
                            }
                        </div>
                    </div>
                    <div class="product-action">
                        <span class="price">R @item.Cost.ToString("N0")</span>
                        <button class="btn-add" @onclick="() => AddToCart(item)" disabled="@(item.StockQuantity <= 0)">
                            Add
                        </button>
                    </div>
                </div>
            }
        }
    </div>
</div>

@* CART MODAL *@
@if (isCartVisible)
{
    <div class="cart-overlay">
        <div class="cart-sidebar">
            <div class="cart-header">
                <h3>Your Request</h3>
                <button class="btn-close-cart" @onclick="() => isCartVisible = false">×</button>
            </div>
            <div class="cart-body">
                @if (!Cart.Any())
                {
                    <div class="empty-state">
                        <span class="bi bi-cart-x"></span>
                        <p>Your cart is empty.</p>
                    </div>
                }
                else
                {
                    @foreach (var item in Cart)
                    {
                        <div class="cart-item">
                            <div>
                                <div class="item-name">@item.Name</div>
                                <div class="item-price">R @item.Cost.ToString("N0")</div>
                            </div>
                            <button class="btn-remove" @onclick="() => RemoveFromCart(item)">
                                <span class="bi bi-trash"></span>
                            </button>
                        </div>
                    }
                }
            </div>
            <div class="cart-footer">
                <div class="total-row">
                    <span>Total</span>
                    <span>R @Cart.Sum(i => i.Cost).ToString("N0")</span>
                </div>
                
                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="alert alert-danger mt-2 small">@ErrorMessage</div>
                }
                @if (!string.IsNullOrEmpty(SuccessMessage))
                {
                    <div class="alert alert-success mt-2 small">@SuccessMessage</div>
                }

                <button class="btn-checkout" @onclick="PlaceOrder" disabled="@(!Cart.Any() || isProcessing)">
                    @if (isProcessing)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span> <span>Processing...</span>
                    }
                    else
                    {
                        <span>Submit Request</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<CatalogItem> Catalog = new();
    private List<CatalogItem> Cart = new();
    
    private string ActiveCategory = "All";
    private bool isCartVisible = false;
    private bool isProcessing = false;
    private bool isLoading = true;
    private string? ErrorMessage;
    private string? SuccessMessage;

    private IEnumerable<CatalogItem> FilteredCatalog =>
        ActiveCategory == "All" ? Catalog : Catalog.Where(i => i.Category == ActiveCategory);

    protected override async Task OnInitializedAsync()
    {
        await LoadCatalogAsync();
    }

    private async Task LoadCatalogAsync()
    {
        try
        {
            isLoading = true;
            using var context = DbFactory.CreateDbContext();
            Catalog = await context.CatalogItems.ToListAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load catalog");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void AddToCart(CatalogItem item)
    {
        // Basic check to prevent adding out of stock items
        if (item.StockQuantity <= 0) return;
        
        Cart.Add(item);
    }

    private void RemoveFromCart(CatalogItem item)
    {
        Cart.Remove(item);
    }

    private void OpenCartModal()
    {
        isCartVisible = true;
        ErrorMessage = null;
        SuccessMessage = null;
    }

    private async Task PlaceOrder()
    {
        isProcessing = true;
        ErrorMessage = null;
        SuccessMessage = null;

        try 
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = await UserManager.GetUserAsync(authState.User);
            
            if (user == null) 
            {
                ErrorMessage = "User session expired. Please log in again.";
                return;
            }

            using var context = DbFactory.CreateDbContext();

            // Find Active Project for Client
            // Assumption: Client has one active project.
            var project = await context.Projects
                .FirstOrDefaultAsync(p => p.ClientId == user.Id && p.Status == "Active");

            if (project == null) 
            {
                ErrorMessage = "You do not have an active project associated with your account.";
                return;
            }

            // Create Order
            var newOrder = new AssetOrder
            {
                ClientId = user.Id,
                ProjectId = project.Id,
                TotalCost = Cart.Sum(i => i.Cost),
                Status = "Pending",
                OrderDate = DateTime.UtcNow
            };

            context.AssetOrders.Add(newOrder);
            await context.SaveChangesAsync(); 

            // Save Order Items
            foreach (var item in Cart)
            {
                context.OrderItems.Add(new OrderItem
                {
                    AssetOrderId = newOrder.Id,
                    CatalogItemId = item.Id,
                    Quantity = 1, // Defaulting to 1 for simplicity in this cart logic
                    PriceAtOrder = item.Cost
                });
            }
            await context.SaveChangesAsync();

            // Clear Cart & Show Success
            Cart.Clear();
            SuccessMessage = "Order request placed successfully!";
            
            // Close after short delay
            await Task.Delay(2000);
            isCartVisible = false;
            SuccessMessage = null;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error placing order");
            ErrorMessage = "An error occurred. Please try again later.";
        }
        finally
        {
            isProcessing = false;
        }
    }
}