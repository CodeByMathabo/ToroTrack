@page "/client/project-details"
@using Microsoft.AspNetCore.Authorization
@* attribute [Authorize(Roles = "Client")]*@

<PageTitle>My Project | Toro Track</PageTitle>

<div class="page-header">
    <h1>Project Details</h1>
    <p class="subtitle">Track the progress of your ongoing engagement.</p>
</div>

<div class="content-panel">
    <h3>Project Status</h3>
    <div class="status-bar">
        <span class="status-label">In Progress</span>
    </div>
    <p class="mt-3">Content regarding the specific client project will load here.</p>
</div>