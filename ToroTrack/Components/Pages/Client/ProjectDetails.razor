@page "/client/project-details"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using ToroTrack.Components.Layout
@using ToroTrack.Business.Services
@using ToroTrack.Models

@inject IProjectService ProjectService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@attribute [Authorize(Roles = "Client")]
@rendermode InteractiveServer

<PageTitle>My Projects | Toro Track</PageTitle>

<div class="page-shell">

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner-border text-success" role="status"></div>
            <p class="mt-3 text-muted">Loading your projects...</p>
        </div>
    }
    else if (MyProjects.Count == 0)
    {
        <div class="empty-state">
            <div class="alert alert-info">
                <span class="bi bi-info-circle me-2"></span> No projects have been assigned to your account yet.
            </div>
        </div>
    }
    else
    {
        <header class="content-header">
            <div class="header-content">

                @* NEW: Explicit Project Picker Widget *@
                <div class="project-picker-widget">
                    <label class="picker-label">
                        <span class="bi bi-arrow-left-right me-1"></span> Switch Project
                    </label>
                    <div class="picker-input-group">
                        <select class="project-select-large" @onchange="OnProjectChanged">
                            @foreach (var proj in MyProjects)
                            {
                                <option value="@proj.Id" selected="@(proj.Id == SelectedProject?.Id)">
                                    @proj.ProjectName
                                </option>
                            }
                        </select>
                        <span class="bi bi-caret-down-fill dropdown-icon"></span>
                    </div>
                </div>

                <div class="project-meta">
                    <div class="client-badge">@SelectedProject?.ClientName</div>
                    <div class="project-dates">
                        <span class="date-item">
                            <span class="bi bi-calendar-check me-1"></span> Start: @SelectedProject?.StartDate.ToString("MMM dd, yyyy")
                        </span>
                        <span class="date-divider">|</span>
                        <span class="date-item">
                            <span class="bi bi-flag-fill me-1"></span> Due: @SelectedProject?.DueDate.ToString("MMM dd, yyyy")
                        </span>
                    </div>
                </div>
            </div>

            <div class="header-right">
                <div class="status-pill @(SelectedProject!.IsActive ? "active" : "inactive")">
                    @(SelectedProject.IsActive ? "Active Engagement" : "Completed")
                </div>
            </div>
        </header>

        @* MAIN DASHBOARD GRID *@
        <div class="dashboard-grid">

            @* LEFT: CURRENT STATUS *@
            <section class="status-card">
                <div class="card-label">Current Stage</div>
                @if (CurrentStage != null)
                {
                    <h2 class="stage-title">@CurrentStage.StageName</h2>

                    <div class="team-display">
                        <span class="bi bi-people-fill icon"></span>
                        <div>
                            <div class="label">Assigned Team</div>
                            <div class="value">@CurrentStage.AssignedTeam</div>
                        </div>
                    </div>

                    <div class="progress-section">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="small-label">Stage Completion</span>
                            <span class="small-label fw-bold">@CurrentStage.ProgressPercent%</span>
                        </div>
                        <div class="progress-bar-bg">
                            <div class="progress-fill" style="width: @(CurrentStage.ProgressPercent)%"></div>
                        </div>
                    </div>

                    <div class="action-area">
                        @if (CurrentStage.Status == "Pending Sign-off")
                        {
                            <div class="alert-box">
                                <span class="bi bi-exclamation-circle-fill"></span>
                                <span>This stage is complete. Please review and sign off to proceed to the next phase.</span>
                            </div>
                            <button class="btn-sign-off" @onclick="OpenSignOffModal">
                                <span class="bi bi-pen-fill me-2"></span> Sign Off Milestone
                            </button>
                        }
                        else if (CurrentStage.Status == "Completed")
                        {
                            <div class="alert alert-success border-0">
                                <span class="bi bi-check-circle-fill me-2"></span> Stage successfully verified.
                            </div>
                        }
                        else
                        {
                            <button class="btn-sign-off disabled" disabled>
                                <span class="bi bi-lock-fill me-2"></span> Awaiting Completion
                            </button>
                            <p class="text-center mt-2 text-muted" style="font-size: 0.8rem;">
                                You can sign off once the team marks this stage as done.
                            </p>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted p-4">All stages completed or no active stages found.</p>
                }
            </section>

            @* RIGHT: TIMELINE *@
            <section class="timeline-card">
                <h3 class="section-header">Project Roadmap</h3>
                <div class="timeline">
                    @foreach (var stage in ProjectStages)
                    {
                        <div class="timeline-item @GetStageClass(stage)">
                            <div class="timeline-marker">
                                @if (stage.Status == "Completed")
                                {
                                    <span class="bi bi-check-lg"></span>
                                }
                                else if (stage.Status == "Active" || stage.Status == "Pending Sign-off")
                                {
                                    <span class="bi bi-circle-fill"></span>
                                }
                            </div>
                            <div class="timeline-content">
                                <div class="d-flex justify-content-between">
                                    <span class="stage-name">@stage.StageName</span>
                                    <span class="stage-status">@stage.Status</span>
                                </div>
                                <span class="stage-team">@stage.AssignedTeam</span>
                            </div>
                        </div>
                    }
                </div>
            </section>

        </div>
    }
</div>

@* SIGN OFF CONFIRMATION MODAL *@
<ToroModal @bind-IsVisible="isSignOffVisible" Title="Confirm Milestone Sign-Off">
    <div class="p-2">
        <p class="mb-4 text-muted">
            By signing off, you confirm that <strong>@CurrentStage?.StageName</strong> has been completed to your satisfaction.
            This action will automatically trigger the <strong>@NextStageName</strong> phase.
        </p>

        <div class="form-group mb-3">
            <label class="small-label text-muted fw-bold">Electronic Signature</label>
            <input @bind="SignerName" class="form-control" placeholder="Type your full name to sign..." />
        </div>

        @if (!string.IsNullOrEmpty(SignOffError))
        {
            <div class="text-danger mb-3 small">@SignOffError</div>
        }

        <div class="d-flex justify-content-end gap-2 mt-4">
            <button class="btn-cancel-modal" @onclick="() => isSignOffVisible = false">Cancel</button>
            <button class="btn-confirm-modal" @onclick="ProcessSignOff" disabled="@(isProcessing || string.IsNullOrWhiteSpace(SignerName))">
                @if (isProcessing)
                {
                    <span class="spinner-border spinner-border-sm me-2"></span>
                }
                else
                {
                    <span class="bi bi-pen-fill me-2"></span>
                }
                Confirm & Sign
            </button>
        </div>
    </div>
</ToroModal>

@code {
    private bool isLoading = true;
    private bool isProcessing = false;
    private List<ClientProjectViewModel> MyProjects = new();
    private ClientProjectViewModel? SelectedProject;
    private List<ClientStageViewModel> ProjectStages = new();
    private ClientStageViewModel? CurrentStage;
    private string NextStageName = "Next Stage";
    private bool isSignOffVisible = false;
    private string SignerName = "";
    private string SignOffError = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            if (user.Identity != null && user.Identity.IsAuthenticated)
            {
                // Why: Get the logged-in User ID from claims
                var userId = user.FindFirst(c => c.Type == System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

                if (!string.IsNullOrEmpty(userId))
                {
                    // Fetch real projects from DB
                    MyProjects = await ProjectService.GetProjectsForClientAsync(userId);

                    // Select the first active project by default
                    SelectedProject = MyProjects.FirstOrDefault(p => p.IsActive) ?? MyProjects.FirstOrDefault();

                    if (SelectedProject != null)
                    {
                        await LoadStagesForProject(SelectedProject.Id);
                    }
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading projects: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task OnProjectChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int projectId))
        {
            SelectedProject = MyProjects.FirstOrDefault(p => p.Id == projectId);
            if (SelectedProject != null)
            {
                await LoadStagesForProject(projectId);
            }
        }
    }

    private async Task LoadStagesForProject(int projectId)
    {
        // Fetch real stages (tasks) from DB
        ProjectStages = await ProjectService.GetProjectStagesAsync(projectId);

        // Determine current active stage
        // Why: Find the first stage that isn't fully completed, or the last one if all are done
        CurrentStage = ProjectStages.FirstOrDefault(s => s.Status != "Completed") ?? ProjectStages.LastOrDefault();

        if (CurrentStage != null)
        {
            var currentIndex = ProjectStages.IndexOf(CurrentStage);
            if (currentIndex + 1 < ProjectStages.Count)
            {
                NextStageName = ProjectStages[currentIndex + 1].StageName;
            }
            else
            {
                NextStageName = "Project Completion";
            }
        }
    }

    private void OpenSignOffModal()
    {
        SignerName = "";
        SignOffError = "";
        isSignOffVisible = true;
    }

    private async Task ProcessSignOff()
    {
        if (CurrentStage == null) return;

        isProcessing = true;
        try
        {
            // Why: Send sign-off to backend to update DB status
            await ProjectService.SignOffStageAsync(CurrentStage.Id, SignerName);

            // Refresh UI
            if (SelectedProject != null)
            {
                await LoadStagesForProject(SelectedProject.Id);
            }

            isSignOffVisible = false;
        }
        catch (Exception ex)
        {
            SignOffError = "Failed to sign off. Please try again.";
            Console.WriteLine(ex);
        }
        finally
        {
            isProcessing = false;
        }
    }

    private string GetStageClass(ClientStageViewModel stage)
    {
        return stage.Status.ToLower().Replace(" ", "-");
    }
}