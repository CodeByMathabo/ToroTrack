@page "/client/project-details"
@using Microsoft.AspNetCore.Authorization
@using ToroTrack.Components.Layout
@*attribute [Authorize(Roles = "Client")]*@
@rendermode InteractiveServer

<PageTitle>My Projects | Toro Track</PageTitle>

<div class="page-shell">

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner-border text-success" role="status"></div>
            <p class="mt-3 text-muted">Loading your projects...</p>
        </div>
    }
    else
    {
        <header class="content-header">
            <div class="header-content">

                @* NEW: Explicit Project Picker Widget *@
                <div class="project-picker-widget">
                    <label class="picker-label">
                        <span class="bi bi-arrow-left-right me-1"></span> Switch Project
                    </label>
                    <div class="picker-input-group">
                        <select class="project-select-large" @onchange="OnProjectChanged">
                            @foreach (var proj in MyProjects)
                            {
                                <option value="@proj.Id" selected="@(proj.Id == SelectedProject?.Id)">
                                    @proj.ProjectName
                                </option>
                            }
                        </select>
                        <span class="bi bi-caret-down-fill dropdown-icon"></span>
                    </div>
                </div>

                <div class="project-meta">
                    <div class="client-badge">@SelectedProject?.ClientName</div>
                    <div class="project-dates">
                        <span class="date-item">
                            <span class="bi bi-calendar-check me-1"></span> Start: @SelectedProject?.StartDate.ToString("MMM dd, yyyy")
                        </span>
                        <span class="date-divider">|</span>
                        <span class="date-item">
                            <span class="bi bi-flag-fill me-1"></span> Due: @SelectedProject?.DueDate.ToString("MMM dd, yyyy")
                        </span>
                    </div>
                </div>
            </div>

            <div class="header-right">
                <div class="status-pill @(SelectedProject!.IsActive ? "active" : "inactive")">
                    @(SelectedProject.IsActive ? "Active Engagement" : "Completed")
                </div>
            </div>
        </header>

        @* MAIN DASHBOARD GRID (Unchanged) *@
        <div class="dashboard-grid">

            @* LEFT: CURRENT STATUS *@
            <section class="status-card">
                <div class="card-label">Current Stage</div>
                <h2 class="stage-title">@CurrentStage?.StageName</h2>

                <div class="team-display">
                    <span class="bi bi-people-fill icon"></span>
                    <div>
                        <div class="label">Assigned Team</div>
                        <div class="value">@CurrentStage?.AssignedTeam</div>
                    </div>
                </div>

                <div class="progress-section">
                    <div class="d-flex justify-content-between mb-1">
                        <span class="small-label">Stage Completion</span>
                        <span class="small-label fw-bold">@CurrentStage?.ProgressPercent%</span>
                    </div>
                    <div class="progress-bar-bg">
                        <div class="progress-fill" style="width: @(CurrentStage?.ProgressPercent)%"></div>
                    </div>
                </div>

                <div class="action-area">
                    @if (CurrentStage?.Status == "Pending Sign-off")
                    {
                        <div class="alert-box">
                            <span class="bi bi-exclamation-circle-fill"></span>
                            <span>This stage is complete. Please review and sign off to proceed to the next phase.</span>
                        </div>
                        <button class="btn-sign-off" @onclick="OpenSignOffModal">
                            <span class="bi bi-pen-fill me-2"></span> Sign Off Milestone
                        </button>
                    }
                    else if (CurrentStage?.Status == "Completed")
                    {
                        <div class="alert alert-success border-0">
                            <span class="bi bi-check-circle-fill me-2"></span> All stages completed.
                        </div>
                    }
                    else
                    {
                        <button class="btn-sign-off disabled" disabled>
                            <span class="bi bi-lock-fill me-2"></span> Awaiting Completion
                        </button>
                        <p class="text-center mt-2 text-muted" style="font-size: 0.8rem;">
                            You can sign off once the team marks all tasks as done.
                        </p>
                    }
                </div>
            </section>

            @* RIGHT: TIMELINE *@
            <section class="timeline-card">
                <h3 class="section-header">Project Roadmap</h3>
                <div class="timeline">
                    @foreach (var stage in ProjectStages)
                    {
                        <div class="timeline-item @GetStageClass(stage)">
                            <div class="timeline-marker">
                                @if (stage.Status == "Completed")
                                {
                                    <span class="bi bi-check-lg"></span>
                                }
                                else if (stage.Status == "Active" || stage.Status == "Pending Sign-off")
                                {
                                    <span class="bi bi-circle-fill"></span>
                                }
                            </div>
                            <div class="timeline-content">
                                <div class="d-flex justify-content-between">
                                    <span class="stage-name">@stage.StageName</span>
                                    <span class="stage-status">@stage.Status</span>
                                </div>
                                <span class="stage-team">@stage.AssignedTeam</span>
                            </div>
                        </div>
                    }
                </div>
            </section>

        </div>
    }
</div>

@* SIGN OFF CONFIRMATION MODAL (Unchanged) *@
<ToroModal @bind-IsVisible="isSignOffVisible" Title="Confirm Milestone Sign-Off">
    <div class="p-2">
        <p class="mb-4 text-muted">
            By signing off, you confirm that <strong>@CurrentStage?.StageName</strong> has been completed to your satisfaction.
            This action will automatically trigger the <strong>@NextStageName</strong> phase.
        </p>

        <div class="form-group mb-3">
            <label class="small-label text-muted fw-bold">Electronic Signature</label>
            <input @bind="SignerName" class="form-control" placeholder="Type your full name to sign..." />
        </div>

        <div class="d-flex justify-content-end gap-2 mt-4">
            <button class="btn-cancel-modal" @onclick="() => isSignOffVisible = false">Cancel</button>
            <button class="btn-confirm-modal" @onclick="ProcessSignOff" disabled="@string.IsNullOrWhiteSpace(SignerName)">
                <span class="bi bi-pen-fill me-2"></span> Confirm & Sign
            </button>
        </div>
    </div>
</ToroModal>

@code {
    // ... [ALL C# Logic Remains Identical to Previous Version] ...
    // (Omitting repetition for brevity, assume Models, State, and Methods are here)
    public class ClientProject { public int Id { get; set; } public string ProjectName { get; set; } = ""; public string ClientName { get; set; } = ""; public DateTime StartDate { get; set; } public DateTime DueDate { get; set; } public bool IsActive { get; set; } }
    public class ClientStage { public int Id { get; set; } public string StageName { get; set; } = ""; public string AssignedTeam { get; set; } = ""; public string Status { get; set; } = ""; public int ProgressPercent { get; set; } }

    private bool isLoading = true;
    private List<ClientProject> MyProjects = new();
    private ClientProject? SelectedProject;
    private List<ClientStage> ProjectStages = new();
    private ClientStage? CurrentStage;
    private string NextStageName = "Next Stage";
    private bool isSignOffVisible = false;
    private string SignerName = "";

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(500);
        MyProjects = new List<ClientProject>
        {
            new ClientProject { Id = 101, ProjectName = "Cloud Infrastructure Migration", ClientName = "Law Firm Z", StartDate = DateTime.Now.AddDays(-45), DueDate = DateTime.Now.AddDays(60), IsActive = true },
            new ClientProject { Id = 102, ProjectName = "Cybersecurity Audit 2024", ClientName = "Law Firm Z", StartDate = DateTime.Now.AddDays(-200), DueDate = DateTime.Now.AddDays(-10), IsActive = false }
        };
        SelectedProject = MyProjects.FirstOrDefault(p => p.IsActive) ?? MyProjects.FirstOrDefault();
        if (SelectedProject != null) LoadStagesForProject(SelectedProject.Id);
        isLoading = false;
    }
    private void OnProjectChanged(ChangeEventArgs e) { if (int.TryParse(e.Value?.ToString(), out int projectId)) { SelectedProject = MyProjects.FirstOrDefault(p => p.Id == projectId); LoadStagesForProject(projectId); } }
    private void LoadStagesForProject(int projectId)
    {
        if (projectId == 101) { ProjectStages = new List<ClientStage> { new ClientStage { Id = 1, StageName = "Procurement & Deployment", AssignedTeam = "Infrastructure Team", Status = "Completed", ProgressPercent = 100 }, new ClientStage { Id = 2, StageName = "Network Hardening", AssignedTeam = "Network & Security Team", Status = "Pending Sign-off", ProgressPercent = 100 }, new ClientStage { Id = 3, StageName = "Cloud Transition", AssignedTeam = "Cloud Migration Team", Status = "Pending", ProgressPercent = 0 }, new ClientStage { Id = 4, StageName = "Workflow Implementation", AssignedTeam = "Modern Workplace Team", Status = "Pending", ProgressPercent = 0 }, new ClientStage { Id = 5, StageName = "Education & Handover", AssignedTeam = "Training & Support Team", Status = "Pending", ProgressPercent = 0 } }; }
        else { ProjectStages = new List<ClientStage> { new ClientStage { Id = 11, StageName = "Security Audit", AssignedTeam = "Auditor Team", Status = "Completed", ProgressPercent = 100 }, new ClientStage { Id = 12, StageName = "Report Generation", AssignedTeam = "Auditor Team", Status = "Completed", ProgressPercent = 100 }, new ClientStage { Id = 13, StageName = "Closing Meeting", AssignedTeam = "Client Lead", Status = "Completed", ProgressPercent = 100 } }; }
        CurrentStage = ProjectStages.FirstOrDefault(s => s.Status != "Completed") ?? ProjectStages.Last();
        var currentIndex = ProjectStages.IndexOf(CurrentStage);
        if (currentIndex + 1 < ProjectStages.Count) NextStageName = ProjectStages[currentIndex + 1].StageName; else NextStageName = "Project Completion";
    }
    private void OpenSignOffModal() { SignerName = ""; isSignOffVisible = true; }
    private async Task ProcessSignOff() { await Task.Delay(1000); if (CurrentStage != null) { CurrentStage.Status = "Completed"; var nextIndex = ProjectStages.IndexOf(CurrentStage) + 1; if (nextIndex < ProjectStages.Count) { ProjectStages[nextIndex].Status = "Active"; ProjectStages[nextIndex].ProgressPercent = 0; CurrentStage = ProjectStages[nextIndex]; } else { if (SelectedProject != null) SelectedProject.IsActive = false; } } isSignOffVisible = false; }
    private string GetStageClass(ClientStage stage) { return stage.Status.ToLower().Replace(" ", "-"); }
}