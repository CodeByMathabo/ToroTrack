@page "/auditor/audit-trail"
@using Microsoft.AspNetCore.Authorization
@using ToroTrack.Components.Layout
@* attribute [Authorize(Roles = "Auditor")] *@
@rendermode InteractiveServer

<PageTitle>Audit Trail | Toro Track</PageTitle>

<div class="page-shell">
    <header class="content-header">
        <div class="header-left">
            <h1 class="page-title">System Audit Logs</h1>
            <p class="page-subtitle">Immutable record of all user activities and security events.</p>
        </div>
        <div class="header-right">
            <div class="search-box">
                <span class="bi bi-search search-icon"></span>
                <input type="text" class="toro-search" placeholder="Search IP, User, or Event..." @bind="SearchTerm" @bind:event="oninput" />
            </div>
        </div>
    </header>

    @* FILTER BAR *@
    <div class="filter-bar">
        <div class="filter-group">
            <button class="filter-pill @(ActiveFilter == "All" ? "active" : "")" @onclick='() => ActiveFilter = "All"'>All Events</button>
            <button class="filter-pill @(ActiveFilter == "Security" ? "active" : "")" @onclick='() => ActiveFilter = "Security"'>
                Security
                @if (SecurityCount > 0)
                {
                    <span class="badge bg-danger ms-1">@SecurityCount</span>
                }
            </button>
            <button class="filter-pill @(ActiveFilter == "DataChange" ? "active" : "")" @onclick='() => ActiveFilter = "DataChange"'>Data Changes</button>
            <button class="filter-pill @(ActiveFilter == "System" ? "active" : "")" @onclick='() => ActiveFilter = "System"'>System Errors</button>
        </div>

        <div class="ms-auto">
            <button class="btn-outline-toro-sm" @onclick="ExportLogs">
                <span class="bi bi-download me-1"></span> Export CSV
            </button>
        </div>
    </div>

    @* LOGS TABLE *@
    <div class="table-container">
        <table class="toro-table">
            <thead>
                <tr>
                    <th style="width: 15%">Timestamp</th>
                    <th style="width: 18%">Actor</th>
                    <th style="width: 12%">Event Type</th>
                    <th style="width: 40%">Description</th>
                    <th style="width: 15%">Metadata</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in FilteredLogs)
                {
                    <tr class="animate-fade-in @(log.Category == "Security" ? "row-alert" : "")">
                        <td class="text-monospace text-muted">@log.Timestamp.ToString("MMM dd, HH:mm")</td>
                        <td>
                            <div class="user-cell">
                                <div class="avatar-xs @GetRoleColor(log.UserRole)">
                                    @log.UserName.Substring(0, 1).ToUpper()
                                </div>
                                <div class="d-flex flex-column">
                                    <span class="fw-bold">@log.UserName</span>
                                    <span class="small-role">@log.UserRole</span>
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="badge-event @GetBadgeClass(log.Category)">@log.ActionType</span>
                        </td>
                        <td class="text-break">
                            @log.Details
                        </td>
                        <td class="meta-text">
                            <div>IP: @log.IpAddress</div>
                            <div class="text-muted" style="font-size: 0.7rem;">ID: @log.Id.ToString().Substring(0, 8)</div>
                        </td>
                    </tr>
                }
                @if (!FilteredLogs.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            <span class="bi bi-search display-4 mb-3 d-block"></span>
                            No logs found matching your criteria.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    // --- STATE ---
    private string SearchTerm = "";
    private string ActiveFilter = "All";
    private List<AuditLogEntry> AllLogs = new();

    // --- PROPERTIES ---
    private int SecurityCount => AllLogs.Count(l => l.Category == "Security");

    private IEnumerable<AuditLogEntry> FilteredLogs =>
        AllLogs.Where(log =>
            (ActiveFilter == "All" || log.Category == ActiveFilter) &&
            (string.IsNullOrEmpty(SearchTerm) ||
             log.UserName.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
             log.Details.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
             log.ActionType.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
             log.IpAddress.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase))
        ).OrderByDescending(l => l.Timestamp);

    // --- MODELS ---
    public class AuditLogEntry
    {
        public Guid Id { get; set; } = Guid.NewGuid();
        public DateTime Timestamp { get; set; }
        public string UserName { get; set; } = "";
        public string UserRole { get; set; } = ""; // Admin, Client, System, Unknown
        public string Category { get; set; } = ""; // Security, DataChange, System
        public string ActionType { get; set; } = ""; // e.g., "Failed Login", "Update Asset"
        public string Details { get; set; } = "";
        public string IpAddress { get; set; } = "";
    }

    // --- INITIALIZATION ---
    protected override void OnInitialized()
    {
        // Mock Data Generation
        AllLogs = new List<AuditLogEntry>
        {
            new AuditLogEntry { Timestamp = DateTime.Now.AddMinutes(-2), UserName = "Unknown", UserRole = "Unknown", Category = "Security", ActionType = "Failed Login", Details = "Multiple failed attempts detected for 'admin'.", IpAddress = "45.22.19.112" },
            new AuditLogEntry { Timestamp = DateTime.Now.AddMinutes(-15), UserName = "Admin User", UserRole = "Admin", Category = "DataChange", ActionType = "Update Asset", Details = "Updated serial number for asset #LPT-004.", IpAddress = "192.168.1.45" },
            new AuditLogEntry { Timestamp = DateTime.Now.AddHours(-1), UserName = "Law Firm Z", UserRole = "Client", Category = "System", ActionType = "File Download", Details = "Downloaded 'Q3_Compliance_Report.pdf'.", IpAddress = "105.22.13.4" },
            new AuditLogEntry { Timestamp = DateTime.Now.AddHours(-3), UserName = "Sarah Smith", UserRole = "TeamMember", Category = "DataChange", ActionType = "Task Complete", Details = "Uploaded proof for 'Server Migration'.", IpAddress = "192.168.1.22" },
            new AuditLogEntry { Timestamp = DateTime.Now.AddHours(-5), UserName = "System", UserRole = "System", Category = "Security", ActionType = "Auto-Scan", Details = "Daily compliance scan completed. 2 Risks found.", IpAddress = "127.0.0.1" },
            new AuditLogEntry { Timestamp = DateTime.Now.AddDays(-1), UserName = "Retail Corp", UserRole = "Client", Category = "DataChange", ActionType = "Profile Update", Details = "Updated billing contact email.", IpAddress = "196.14.20.11" }
        };
    }

    private void ExportLogs()
    {
        // Logic to trigger CSV download would go here
        Console.WriteLine("[AuditTrail] Exporting logs...");
    }

    // --- UI HELPERS ---
    private string GetRoleColor(string role) => role switch
    {
        "Admin" => "bg-primary",
        "System" => "bg-dark",
        "Client" => "bg-success",
        "Unknown" => "bg-danger",
        "TeamMember" => "bg-warning text-dark",
        _ => "bg-secondary"
    };

    private string GetBadgeClass(string category) => category switch
    {
        "Security" => "badge-security",
        "DataChange" => "badge-data",
        "System" => "badge-system",
        _ => "badge-light"
    };
}