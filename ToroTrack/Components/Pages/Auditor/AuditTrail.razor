@page "/auditor/audit-trail"
@using Microsoft.AspNetCore.Authorization
@using ToroTrack.Components.Layout
@using ToroTrack.Models
@using ToroTrack.Business.Services
@inject AuditService AuditService
@attribute [Authorize(Roles = "Auditor, Admin")]
@rendermode InteractiveServer

<PageTitle>Audit Trail | Toro Track</PageTitle>

<div class="page-shell">
    <header class="content-header">
        <div class="header-left">
            <h1 class="page-title">System Audit Logs</h1>
            <p class="page-subtitle">Immutable record of all user activities and security events.</p>
        </div>
        <div class="header-right">
            <div class="search-box">
                <span class="bi bi-search search-icon"></span>
                <input type="text" class="toro-search" placeholder="Search IP, User, or Event..." @bind="SearchTerm" @bind:event="oninput" />
            </div>
        </div>
    </header>

    @* FILTER BAR *@
    <div class="filter-bar">
        <div class="filter-group">
            <button class="filter-pill @(ActiveFilter == "All" ? "active" : "")" @onclick='() => ActiveFilter = "All"'>All Events</button>
            <button class="filter-pill @(ActiveFilter == "Security" ? "active" : "")" @onclick='() => ActiveFilter = "Security"'>
                Security
                @if (SecurityCount > 0)
                {
                    <span class="badge bg-danger ms-1">@SecurityCount</span>
                }
            </button>
            <button class="filter-pill @(ActiveFilter == "DataChange" ? "active" : "")" @onclick='() => ActiveFilter = "DataChange"'>Data Changes</button>
            <button class="filter-pill @(ActiveFilter == "System" ? "active" : "")" @onclick='() => ActiveFilter = "System"'>System Errors</button>
        </div>

        <div class="ms-auto">
            <button class="btn-outline-toro-sm" @onclick="ExportLogs">
                <span class="bi bi-download me-1"></span> Export CSV
            </button>
        </div>
    </div>

    @* LOGS TABLE *@
    <div class="table-container">
        <table class="toro-table">
            <thead>
                <tr>
                    <th style="width: 15%">Timestamp</th>
                    <th style="width: 18%">Actor</th>
                    <th style="width: 12%">Event Type</th>
                    <th style="width: 40%">Description</th>
                    <th style="width: 15%">Metadata</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in FilteredLogs)
                {
                    <tr class="animate-fade-in @(log.Category == "Security" ? "row-alert" : "")">
                        <td class="text-monospace text-muted">@log.Timestamp.ToString("MMM dd, HH:mm")</td>
                        <td>
                            <div class="user-cell">
                                <div class="avatar-xs @GetRoleColor(log.UserRole)">
                                    @if (!string.IsNullOrEmpty(log.UserName))
                                    {
                                        @log.UserName.Substring(0, 1).ToUpper()
                                    }
                                </div>
                                <div class="d-flex flex-column">
                                    <span class="fw-bold">@log.UserName</span>
                                    <span class="small-role">@log.UserRole</span>
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="badge-event @GetBadgeClass(log.Category)">@log.ActionType</span>
                        </td>
                        <td class="text-break">
                            @log.Details
                        </td>
                        <td class="meta-text">
                            <div>IP: @log.IpAddress</div>
                            <div class="text-muted" style="font-size: 0.7rem;">ID: @log.Id.ToString("D8")</div>
                        </td>
                    </tr>
                }
                @if (!FilteredLogs.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            <span class="bi bi-search display-4 mb-3 d-block"></span>
                            No logs found matching your criteria.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    // --- STATE ---
    private string SearchTerm = "";
    private string ActiveFilter = "All";
    private List<AuditLogEntry> AllLogs = new();

    // --- PROPERTIES ---
    private int SecurityCount => AllLogs.Count(l => l.Category == "Security");

    private IEnumerable<AuditLogEntry> FilteredLogs =>
        AllLogs.Where(log =>
            (ActiveFilter == "All" || log.Category == ActiveFilter) &&
            (string.IsNullOrEmpty(SearchTerm) ||
             (log.UserName?.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
             (log.Details?.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
             (log.ActionType?.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
             (log.IpAddress?.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ?? false))
        ).OrderByDescending(l => l.Timestamp);

    // --- INITIALIZATION ---
    protected override async Task OnInitializedAsync()
    {
        await LoadLogs();
    }

    private async Task LoadLogs()
    {
        AllLogs = await AuditService.GetFullAuditTrailAsync();
    }

    private void ExportLogs()
    {
        // Simple console export for now, can be expanded to JS File Download
        Console.WriteLine("[AuditTrail] Exporting filtered logs to CSV format...");
        foreach (var log in FilteredLogs)
        {
            Console.WriteLine($"{log.Timestamp},{log.UserName},{log.ActionType},{log.Details}");
        }
    }

    // --- UI HELPERS ---
    private string GetRoleColor(string role)
    {
        // Matches common Identity Role names
        if (role.Contains("Admin", StringComparison.OrdinalIgnoreCase)) return "bg-primary";
        if (role.Contains("Client", StringComparison.OrdinalIgnoreCase)) return "bg-success";
        if (role.Contains("Auditor", StringComparison.OrdinalIgnoreCase)) return "bg-info text-dark";
        if (role.Contains("Team", StringComparison.OrdinalIgnoreCase)) return "bg-warning text-dark";
        if (role == "System") return "bg-dark";
        return "bg-secondary";
    }

    private string GetBadgeClass(string category) => category switch
    {
        "Security" => "badge-security",
        "DataChange" => "badge-data",
        "System" => "badge-system",
        _ => "badge-light"
    };
}