@page "/admin/catalog"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using System.Text.RegularExpressions
@using ToroTrack.Components.Layout
@using ToroTrack.Data
@using ToroTrack.Data.Entities

@attribute [Authorize(Roles = "Admin, TeamMember")]
@rendermode InteractiveServer

@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject ILogger<ManageCatalog> Logger
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@inject UserManager<ApplicationUser> UserManager

<PageTitle>Asset & Inventory | Toro Track</PageTitle>

<div class="page-shell">
    <header class="content-header">
        <div class="header-left">
            <h1 class="page-title">Catalog & Inventory</h1>
            <p class="page-subtitle">Manage product listings and track hardware stock levels.</p>
        </div>
        
        <div class="header-right">
            @if (IsLogisticsCoordinator && TaskId.HasValue)
            {
                <button class="btn-primary-toro" style="background-color: #283618; border-color: #283618;" @onclick="ConfirmStockVerification">
                    <span class="bi bi-check-circle-fill me-2"></span> Confirm Verified
                </button>
            }

            <button class="btn-primary-toro" @onclick="OpenAddModal">
                Add New Product
            </button>
        </div>
    </header>

    @* INVENTORY FILTERS *@
    <div class="filter-tabs mb-4">
        <button class="tab-btn @(ActiveFilter == "All" ? "active" : "")" @onclick='() => ActiveFilter = "All"'>
            All Products
        </button>
        <button class="tab-btn @(ActiveFilter == "LowStock" ? "active" : "")" @onclick='() => ActiveFilter = "LowStock"'>
            <span class="bi bi-exclamation-triangle-fill text-warning me-1"></span> Low Stock
        </button>
        <button class="tab-btn @(ActiveFilter == "OutOfStock" ? "active" : "")" @onclick='() => ActiveFilter = "OutOfStock"'>
            <span class="bi bi-x-circle-fill text-danger me-1"></span> Out of Stock
        </button>
    </div>

    @* CATALOG TABLE *@
    <div class="table-container">
        @if (isLoading)
        {
            <div class="p-5 text-center text-muted">
                <div class="spinner-border text-primary mb-2" role="status"></div>
                <p>Loading inventory...</p>
            </div>
        }
        else
        {
            <table class="toro-table">
                <thead>
                    <tr>
                        <th style="width: 10%">Category</th>
                        <th style="width: 25%">Product Name</th>
                        <th style="width: 15%">Stock Level</th>
                        <th style="width: 15%">Cost</th>
                        <th style="width: 15%">Status</th>
                        <th style="width: 20%" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in FilteredItems)
                    {
                        <tr>
                            <td>
                                <span class="badge-type @item.Category.ToLower()">@item.Category</span>
                            </td>

                            <td class="fw-bold">
                                @item.Name
                                @if (item.Category == "Software")
                                {
                                    <div class="text-muted small mt-1 fw-normal" style="font-size: 0.7rem;">
                                        <span class="bi bi-info-circle"></span> Digital License
                                    </div>
                                }
                            </td>
                            
                            @* STOCK MANAGEMENT COLUMN *@
                            <td>
                                @if (item.Category == "Hardware")
                                {
                                    <div class="d-flex flex-column justify-content-center">
                                        <div class="d-flex align-items-center gap-2">
                                            <span class="fw-bold fs-6">@item.StockQuantity</span>
                                            
                                            @if (item.StockQuantity == 0)
                                            {
                                                <span class="badge-stock out">Out of Stock</span>
                                            }
                                            else if (item.StockQuantity < 5)
                                            {
                                                <span class="badge-stock low">Low Stock</span>
                                            }
                                            else
                                            {
                                                <span class="badge-stock good">In-Stock</span>
                                            }
                                        </div>

                                        @* VISUAL HISTORY: Display the human-readable update string *@
                                        @{ var history = GetStockHistory(item.Description); }
                                        @if (!string.IsNullOrEmpty(history))
                                        {
                                            <small class="text-info fst-italic mt-1" style="font-size: 0.7rem;">
                                                <i class="bi bi-clock-history"></i> @history
                                            </small>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small">(Unlimited)</span>
                                }
                            </td>

                            <td>R @item.Cost.ToString("N0")</td>
                            
                            <td>
                                @if (item.StockQuantity > 0 || item.Category == "Software")
                                {
                                    <span class="status-dot active"></span> <span class="small">Active</span>
                                }
                                else
                                {
                                    <span class="status-dot inactive"></span> <span class="small text-muted">Unavailable</span>
                                }
                            </td>

                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <button class="btn-action-edit" @onclick="() => OpenStockUpdateModal(item)" title="Update Count">
                                        <i class="bi bi-calculator"></i> Qty
                                    </button>
                                    
                                    @if (!IsLogisticsCoordinator)
                                    {
                                         <button class="btn-action-delete" @onclick="() => DeleteItem(item)">
                                            Delete
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            
            @if (!FilteredItems.Any())
            {
                <div class="text-center py-5 text-muted">
                    <span class="bi bi-box-seam display-4 d-block mb-3 opacity-50"></span>
                    <p>No items found in this category.</p>
                </div>
            }
        }
    </div>
</div>

@* ADD/UPDATE MODAL *@
<ToroModal @bind-IsVisible="isModalVisible" Title="@modalTitle">
    <EditForm Model="CurrentItem" OnValidSubmit="SaveItem">
        <DataAnnotationsValidator />
        
        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="alert alert-danger small mb-3">@ErrorMessage</div>
        }

        @* STOCK CALCULATION UI (Only visible in Stock Mode) *@
        @if (isStockMode && CurrentItem.Category == "Hardware")
        {
            <div class="bg-light p-3 rounded-3 border mb-3">
                <label class="small-label text-muted mb-2">Calculation Preview</label>
                
                <div class="d-flex justify-content-between align-items-center mb-1">
                     <span class="text-muted small">Original Level:</span>
                     <span class="fw-bold text-dark">@OriginalStock</span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-1 border-bottom pb-2">
                     <span class="text-muted small">Adjustment:</span>
                     @{
                         int diff = CurrentItem.StockQuantity - OriginalStock;
                         string colorClass = diff > 0 ? "text-success" : (diff < 0 ? "text-danger" : "text-muted");
                         string actionText = diff > 0 ? "Added" : (diff < 0 ? "Removed" : "No Change");
                     }
                     <span class="fw-bold @colorClass">@actionText @Math.Abs(diff)</span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-2">
                     <span class="small-label mb-0">New Total:</span>
                     <span class="badge bg-dark fs-6">@CurrentItem.StockQuantity</span>
                </div>
            </div>
        }

        <div class="form-group mb-3">
            <label class="small-label">Category</label>
            <InputSelect @bind-Value="CurrentItem.Category" class="form-select toro-input" disabled="@isStockMode">
                <option value="Hardware">Hardware</option>
                <option value="Software">Software</option>
            </InputSelect>
        </div>

        <div class="form-group mb-3">
            <label class="small-label">Product Name</label>
            <InputText @bind-Value="CurrentItem.Name" class="form-control toro-input" 
                      placeholder="e.g. Dell Latitude 5420" disabled="@isStockMode" />
        </div>

        @if (CurrentItem.Category == "Hardware")
        {
            <div class="form-group mb-3 animate-fade-in">
                <label class="small-label">
                    @(isStockMode ? "Update Total Quantity" : "Stock Quantity")
                </label>
                <InputNumber @bind-Value="CurrentItem.StockQuantity" class="form-control toro-input" 
                           style="@(isStockMode ? "border: 2px solid #283618; background-color: #fefae0;" : "")" 
                           placeholder="0" />
                @if(isStockMode)
                {
                     <small class="text-success fw-bold" style="font-size: 0.75rem;">
                        <i class="bi bi-pencil-fill"></i> Enter the new total count here.
                     </small>
                }
            </div>
        }
        
        <div class="form-group mb-3">
            <label class="small-label">Cost (ZAR)</label>
            <InputNumber @bind-Value="CurrentItem.Cost" class="form-control toro-input" disabled="@isStockMode" />
        </div>

        <div class="form-group mb-4">
            <label class="small-label">Description / Notes</label>
            <InputTextArea @bind-Value="CurrentItem.Description" class="form-control toro-input" rows="3" 
                          placeholder="Description..." disabled="@isStockMode" />
        </div>

        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn-secondary-toro" @onclick="() => isModalVisible = false">Cancel</button>
            <button type="submit" class="btn-primary-toro" disabled="@isSaving">
                @if (isSaving) 
                {
                    <span class="spinner-border spinner-border-sm me-1"></span> <span>Saving...</span>
                }
                else 
                {
                   <span>@(isStockMode ? "Confirm Update" : "Save Product")</span> 
                }
            </button>
        </div>
    </EditForm>
</ToroModal>

@code {
    [SupplyParameterFromQuery]
    public int? TaskId { get; set; }

    private bool isModalVisible = false;
    private bool isLoading = true;
    private bool isSaving = false;
    private bool isStockMode = false;
    private int OriginalStock = 0;

    private string modalTitle = "Add Catalog Item";
    private string ActiveFilter = "All";
    private string ErrorMessage = "";
    private bool IsLogisticsCoordinator = false;

    private CatalogItem CurrentItem = new();
    private List<CatalogItem> CatalogItems = new();

    private IEnumerable<CatalogItem> FilteredItems => ActiveFilter switch
    {
        "LowStock" => CatalogItems.Where(i => i.Category == "Hardware" && i.StockQuantity < 5 && i.StockQuantity > 0),
        "OutOfStock" => CatalogItems.Where(i => i.Category == "Hardware" && i.StockQuantity == 0),
        _ => CatalogItems
    };

    protected override async Task OnInitializedAsync()
    {
        await CheckUserRoleAsync();
        await LoadDataAsync();
    }

    private async Task CheckUserRoleAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            if (user.Identity?.IsAuthenticated == true)
            {
                var appUser = await UserManager.GetUserAsync(user);
                if (appUser?.JobRole == "Logistics Coordinator") IsLogisticsCoordinator = true;
            }
        }
        catch (Exception ex) { Logger.LogError(ex, "Error checking user role"); }
    }

    private async Task LoadDataAsync()
    {
        try
        {
            isLoading = true;
            using var context = DbFactory.CreateDbContext();
            CatalogItems = await context.CatalogItems.OrderBy(c => c.Name).ToListAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load items.");
            ErrorMessage = "Could not load inventory data.";
        }
        finally { isLoading = false; }
    }

    private async Task ConfirmStockVerification()
    {
        if (!TaskId.HasValue) return;
        try
        {
            using var context = DbFactory.CreateDbContext();
            var task = await context.ProjectTasks.FindAsync(TaskId.Value);
            if (task != null)
            {
                task.Status = "PendingReview";
                task.ProofUrl = "Catalog Stock Verified by Coordinator";
                await context.SaveChangesAsync();
                Navigation.NavigateTo("/team/kanban");
            }
        }
        catch (Exception ex) { Logger.LogError(ex, "Failed to complete task."); }
    }

    private void OpenAddModal()
    {
        CurrentItem = new CatalogItem { Category = "Hardware", StockQuantity = 1 };
        modalTitle = "Add New Product";
        isStockMode = false;
        ErrorMessage = "";
        isModalVisible = true;
    }

    private void OpenStockUpdateModal(CatalogItem item)
    {
        OriginalStock = item.StockQuantity;
        CurrentItem = new CatalogItem 
        { 
            Id = item.Id, 
            Name = item.Name, 
            Category = item.Category, 
            Cost = item.Cost, 
            Description = item.Description,
            StockQuantity = item.StockQuantity
        };
        modalTitle = "Update Stock Level";
        isStockMode = true; 
        ErrorMessage = "";
        isModalVisible = true;
    }

    private async Task SaveItem()
    {
        isSaving = true;
        ErrorMessage = "";
        
        try
        {
            using var context = DbFactory.CreateDbContext();
            
            // LOGIC: Generate Human Readable History String
            if (isStockMode)
            {
                int diff = CurrentItem.StockQuantity - OriginalStock;
                if (diff != 0)
                {
                    string action = diff > 0 ? "Added" : "Removed";
                    // New Format: [Update: From 15 To 20. Added 5]
                    string historyTag = $"[Update: From {OriginalStock} To {CurrentItem.StockQuantity}. {action} {Math.Abs(diff)}]";
                    
                    // Regex remove old tags of format [Update: ...] so we don't stack them
                    string cleanDesc = Regex.Replace(CurrentItem.Description ?? "", @"\[Update:.*?\]", "").Trim();
                    
                    CurrentItem.Description = $"{historyTag} {cleanDesc}";
                }
            }

            if (CurrentItem.Id == 0)
            {
                context.CatalogItems.Add(CurrentItem);
            }
            else
            {
                var existing = await context.CatalogItems.FindAsync(CurrentItem.Id);
                if (existing != null)
                {
                    if (isStockMode)
                    {
                        existing.StockQuantity = CurrentItem.StockQuantity;
                        existing.Description = CurrentItem.Description;
                    }
                    else
                    {
                        existing.Name = CurrentItem.Name;
                        existing.Category = CurrentItem.Category;
                        existing.Cost = CurrentItem.Cost;
                        existing.Description = CurrentItem.Description;
                        existing.StockQuantity = CurrentItem.StockQuantity;
                    }
                }
            }

            await context.SaveChangesAsync();
            await LoadDataAsync();
            isModalVisible = false;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving item.");
            ErrorMessage = "Failed to save. Try again.";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteItem(CatalogItem item)
    {
         try
        {
            using var context = DbFactory.CreateDbContext();
            var existing = await context.CatalogItems.FindAsync(item.Id);
            if (existing != null)
            {
                context.CatalogItems.Remove(existing);
                await context.SaveChangesAsync();
                await LoadDataAsync();
            }
        }
        catch (Exception ex) { Logger.LogError(ex, "Error deleting."); }
    }

    private string GetStockHistory(string? description)
    {
        if (string.IsNullOrEmpty(description)) return "";
        var match = Regex.Match(description, @"\[Update:.*?\]");
        return match.Success ? match.Value.Replace("[", "").Replace("]", "") : "";
    }
}