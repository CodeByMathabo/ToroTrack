@page "/admin/users"
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Authorization
@using ToroTrack.Business.Services
@using ToroTrack.Models
@using ToroTrack.Data.Entities

@inject ILogger<InviteUser> Logger
@inject IInviteService InviteService
@rendermode InteractiveServer

<PageTitle>Invite Users | Toro Track</PageTitle>

<div class="page-shell">
    <header class="content-header">
        <div>
            <h1 class="page-title">Invite Users</h1>
            <p class="page-subtitle">Send invitations to new Admins, Auditors, or Clients.</p>
        </div>
    </header>

    <div class="invite-layout">
        @* Left Card: Invitation Form *@
        <section class="invite-form-card">
            <h3 class="form-header">Send Invitation</h3>

            <EditForm Model="@InputModel" OnValidSubmit="HandleValidSubmit" FormName="inviteUserForm">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label class="small-label">User Role</label>
                    <InputSelect @bind-Value="InputModel.Role" class="form-select form-control">
                        <option value="Admin">Administrator</option>
                        <option value="Auditor">Auditor</option>
                        <option value="Client">Client</option>
                    </InputSelect>
                </div>

                <div class="form-group">
                    <label class="small-label">Email Address</label>
                    <InputText @bind-Value="InputModel.Email" class="form-control" placeholder="user@company.com" />
                    <ValidationMessage For="@(() => InputModel.Email)" class="text-danger" />
                </div>

                @if (InputModel.Role == "Client")
                {
                    <div class="client-fields-group">
                        <h4 class="section-divider">Client Details</h4>
                        <div class="form-group">
                            <label class="small-label">Full Name</label>
                            <InputText @bind-Value="InputModel.FullName" class="form-control" placeholder="Themba Kobe" />
                            <ValidationMessage For="@(() => InputModel.FullName)" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label class="small-label">Company Name</label>
                            <InputText @bind-Value="InputModel.CompanyName" class="form-control" placeholder="Acme Corp" />
                            <ValidationMessage For="@(() => InputModel.CompanyName)" class="text-danger" />
                        </div>
                        <div class="form-row">
                             <div class="form-group half-width">
                                <label class="small-label">Contact Number</label>
                                <InputText @bind-Value="InputModel.ContactNumber" class="form-control" placeholder="+27 82 545 7496" />
                            </div>
                            <div class="form-group half-width">
                                <label class="small-label">Client Job Role</label>
                                <InputText @bind-Value="InputModel.ClientJobRole" class="form-control" placeholder="e.g. Founder" />
                            </div>
                        </div>
                    </div>
                }

                <div class="form-actions mt-4">
                    <button type="submit" class="btn-primary-toro w-100" disabled="@IsProcessing">
                        @if (IsProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span> <span>Sending...</span>
                        }
                        else
                        {
                            <span class="bi bi-envelope-plus-fill"></span> <span>Send Invitation</span>
                        }
                    </button>
                </div>

                @if (!string.IsNullOrEmpty(SuccessMessage))
                {
                    <div class="alert alert-success mt-3">@SuccessMessage</div>
                }
                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="alert alert-danger mt-3">@ErrorMessage</div>
                }
            </EditForm>
        </section>

        @* Right Card: Pending Invitations List *@
        <section class="invite-list-card">
            <h3 class="form-header">Pending Invitations</h3>

            <table class="toro-table">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Date Invited</th>
                        <th>Status</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (PendingInvites == null)
                    {
                        <tr><td colspan="5" class="text-center">Loading...</td></tr>
                    }
                    else if (!PendingInvites.Any())
                    {
                        <tr><td colspan="5" class="text-center text-muted">No pending invitations.</td></tr>
                    }
                    else
                    {
                        @foreach (var invite in PendingInvites)
                        {
                            <tr>
                                <td>
                                    <div class="fw-bold">@invite.Email</div>
                                    @if (!string.IsNullOrEmpty(invite.CompanyName))
                                    {
                                        <small class="text-muted">@invite.CompanyName</small>
                                    }
                                </td>
                                <td><span class="role-badge @invite.Role.ToLower()">@invite.Role</span></td>
                                <td>@invite.DateInvited.ToString("MMM dd, yyyy")</td>
                                <td><span class="status-pending">Pending</span></td>
                                <td class="text-center">
                                    <button class="btn-revoke" @onclick="() => RevokeInvite(invite.Id)">
                                        Revoke
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>

@code {
    private InviteFormModel InputModel { get; set; } = new();
    private List<PendingInvite> PendingInvites;
    
    private bool IsProcessing { get; set; } = false;
    private string? SuccessMessage { get; set; }
    private string? ErrorMessage { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await LoadInvitesAsync();
    }

    private async Task LoadInvitesAsync()
    {
        try 
        {
            PendingInvites = await InviteService.GetPendingInvitesAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load invites");
        }
    }

    private async Task HandleValidSubmit()
    {
        IsProcessing = true;
        SuccessMessage = null;
        ErrorMessage = null;

        try
        {
            var inviteEntity = new PendingInvite
            {
                Email = InputModel.Email,
                Role = InputModel.Role,
                FullName = InputModel.FullName,
                CompanyName = InputModel.CompanyName,
                ContactNumber = InputModel.ContactNumber,
                ClientJobRole = InputModel.ClientJobRole
            };

            await InviteService.SendInviteAsync(inviteEntity);
            
            SuccessMessage = "Invitation sent successfully.";
            InputModel = new InviteFormModel();
            await LoadInvitesAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error submitting invite");
            ErrorMessage = ex.Message;
        }
        finally
        {
            IsProcessing = false;
        }
    }

    private async Task RevokeInvite(int id)
    {
        try
        {
            await InviteService.RevokeInviteAsync(id);
            await LoadInvitesAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error revoking invite");
        }
    }
}