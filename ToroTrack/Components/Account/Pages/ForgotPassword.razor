@page "/Account/ForgotPassword"

@using System.ComponentModel.DataAnnotations
@using System.Text
@using System.Text.Encodings.Web
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.UI.Services
@using Microsoft.AspNetCore.WebUtilities
@using ToroTrack.Data
@using ToroTrack.Components
@using ToroTrack.Business.Helpers

@inject UserManager<ApplicationUser> UserManager
@inject IEmailSender EmailSender
@inject NavigationManager NavigationManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>Reset Password</PageTitle>

<div class="auth-fullscreen-container">
    <div class="toro-auth-card">

        @* Why: State 1 - Success Message (Permanent View) *@
        @if (_isSuccess)
        {
            <div class="text-center animate-fade-in">
                <div class="mb-4 text-success" style="font-size: 4rem;">
                    <i class="bi bi-check-circle-fill"></i> @* Requires Bootstrap Icons *@
                    <span>&#10004;</span> @* Fallback checkmark symbol *@
                </div>
                <h2 class="auth-header mb-3">Email Sent!</h2>

                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">Check your Inbox</h4>
                    <p class="mb-0">We have sent a new password to <strong>@Input.Email</strong>.</p>
                </div>

                <p class="auth-instruction mt-4">
                    Please use the credentials in that email to log in.</p>

                <div class="d-grid gap-2 mt-4">
                    <a href="Account/Login" class="btn btn-lg btn-primary-toro">Return to Login</a>
                </div>
            </div>
        }
        else
        {
            @* Why: State 2 & 3 - Form & Loading *@
            <h1 class="auth-header">Reset Password</h1>
            <p class="auth-instruction">Enter your email address to receive a new password.</p>

            <EditForm Model="Input" FormName="forgot-password" OnValidSubmit="OnValidSubmitAsync" method="post">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger text-center mb-3" role="alert" />

                @* Why: Disable the fieldset during loading to prevent edits *@
                <fieldset disabled="@_isLoading" class="p-0 m-0" style="border: none;">
                    <div class="form-floating mb-4">
                        <InputText @bind-Value="Input.Email"
                                   class="form-control"
                                   autocomplete="username"
                                   aria-required="true"
                                   placeholder="name@example.com"
                                   id="email-input" />
                        <ValidationMessage For="() => Input.Email" class="text-danger" />
                    </div>

                    @* Loading Indicator *@
                    @if (_isLoading)
                    {
                        <div class="my-4 p-3 bg-light rounded border-0 text-center">
                            <div class="spinner-border text-primary mb-2" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mb-0 fw-bold text-muted">Sending email... please wait.</p>
                            <small class="text-danger">Do not close this window.</small>
                        </div>
                    }

                    <div class="button-group-gap">
                        @if (!_isLoading)
                        {
                            <button type="submit" class="btn btn-lg btn-primary-toro flex-grow-1">Reset Password</button>
                            <a href="Account/Login" class="btn btn-lg btn-primary-toro flex-grow-1">Back To Login</a>
                        }
                    </div>
                </fieldset>
            </EditForm>
        }
    </div>
</div>

@* Why: Only used for Errors now. Success is handled by the main view. *@
<Snackbar @bind-IsVisible="_showErrorSnackbar" Message="@_errorMessage" IsSuccess="false" />

@code {
    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    // UI States
    private bool _isLoading;
    private bool _isSuccess;

    // Error Snackbar States
    private bool _showErrorSnackbar;
    private string _errorMessage = "";

    private async Task OnValidSubmitAsync()
    {
        // 1. Reset States
        _isLoading = true;
        _showErrorSnackbar = false;
        StateHasChanged(); // Force UI to show loading spinner immediately

        try
        {
            // Why: Simulate a small delay to prevents the UI from flickering too fast if the server is local.
            await Task.Delay(800);

            var user = await UserManager.FindByEmailAsync(Input.Email);

            // Why: Security - obscure invalid emails
            if (user is null || !(await UserManager.IsEmailConfirmedAsync(user)))
            {
                // Fake processing time
                await Task.Delay(1500);
                // Show success screen anyway to prevent email enumeration
                _isLoading = false;
                _isSuccess = true;
                return;
            }

            var newPassword = PasswordHelper.GenerateRandomPassword();
            var token = await UserManager.GeneratePasswordResetTokenAsync(user);
            var result = await UserManager.ResetPasswordAsync(user, token, newPassword);

            if (result.Succeeded)
            {
                Console.WriteLine($"Password reset for: {Input.Email}");

                var emailBody = $@"
                    <div style='font-family: sans-serif; padding: 20px; border: 1px solid #ddd; border-radius: 8px;'>
                        <h2 style='color: #283618;'>Password Reset Successful</h2>
                        <p>Your password for Toro Track has been reset.</p>
                        <div style='background-color: #f4f4f4; padding: 15px; border-radius: 5px; margin: 20px 0;'>
                            <p style='margin: 5px 0;'><strong>Email:</strong> {Input.Email}</p>
                            <p style='margin: 5px 0;'><strong>New Password:</strong> <span style='font-family: monospace; font-size: 1.2em; background: #fff; padding: 2px 6px;'>{newPassword}</span></p>
                        </div>
                        <p>Please use these credentials to login!</p>
                    </div>";

                await EmailSender.SendEmailAsync(Input.Email, "Toro Track - New Password", emailBody);

                // Why: Switch to Success View
                _isLoading = false;
                _isSuccess = true;
            }
            else
            {
                throw new Exception("Database reset failed.");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");

            // Handle Error
            _isLoading = false;
            _errorMessage = "Something went wrong. Please try again.";
            _showErrorSnackbar = true;
        }
        finally
        {
            StateHasChanged();
        }
    }

    private sealed class InputModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; } = "";
    }
}