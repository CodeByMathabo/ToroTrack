@using Microsoft.AspNetCore.Components.Authorization

<div class="nav-links-container">

    @* --- ADMIN LINKS --- *@
    <AuthorizeView Roles="Admin">
        <Authorized>
            <div class="menu-section-label">Administration Portal</div>

            <NavLink class="toro-nav-link" href="admin/overview">
                <span class="bi bi-speedometer2"></span>
                <span class="link-text">Overview</span>
            </NavLink>

            <NavLink class="toro-nav-link" href="admin/projects">
                <span class="bi bi-kanban"></span>
                <span class="link-text">Projects</span>
            </NavLink>

            <NavLink class="toro-nav-link" href="admin/users">
                <span class="bi bi-people-fill"></span>
                <span class="link-text">Manage Users</span>
            </NavLink>

            <NavLink class="toro-nav-link" href="admin/verify">
                <span class="bi bi-check-all"></span>
                <span class="link-text">Verify Tasks</span>
            </NavLink>

            <NavLink class="toro-nav-link" href="admin/catalog">
                <span class="bi bi-grid-3x3-gap"></span>
                <span class="link-text">Catalog</span>
            </NavLink>
        </Authorized>
    </AuthorizeView>

    @* --- AUDITOR LINKS --- *@
    <AuthorizeView Roles="Auditor">
        <Authorized>
            <div class="menu-section-label">Audit Portal</div>

            <NavLink class="toro-nav-link" href="auditor/compliance">
                <span class="bi bi-shield-check"></span>
                <span class="link-text">Compliance</span>
            </NavLink>

            <NavLink class="toro-nav-link" href="auditor/reports">
                <span class="bi bi-file-earmark-bar-graph"></span>
                <span class="link-text">Reports</span>
            </NavLink>

            <NavLink class="toro-nav-link" href="auditor/audit-trail">
                <span class="bi bi-clock-history"></span>
                <span class="link-text">Audit Trail</span>
            </NavLink>
        </Authorized>
    </AuthorizeView>

    @* --- TEAM MEMBER LINKS --- *@
    <AuthorizeView Roles="TeamMember">
        <Authorized>
            <div class="menu-section-label">Team Portal</div>

            <NavLink class="toro-nav-link" href="team/kanban">
                <span class="bi bi-kanban"></span>
                <span class="link-text">My Tasks</span>
            </NavLink>

            @* Why: Added access to the new notification center for audit alerts *@
            <NavLink class="toro-nav-link" href="team/notifications">
                <span class="bi bi-bell"></span>
                <span class="link-text">Notifications</span>
            </NavLink>
        </Authorized>
    </AuthorizeView>

    @* --- CLIENT LINKS --- *@
    <AuthorizeView Roles="Client">
        <Authorized>
            <div class="menu-section-label">My Project</div>

            <NavLink class="toro-nav-link" href="client/project-details">
                <span class="bi bi-info-circle"></span>
                <span class="link-text">Status</span>
            </NavLink>

            <NavLink class="toro-nav-link" href="client/assets">
                <span class="bi bi-laptop"></span>
                <span class="link-text">My Assets</span>
            </NavLink>

            <NavLink class="toro-nav-link" href="client/communication">
                <span class="bi bi-chat-dots"></span>
                <span class="link-text">Communication</span>
            </NavLink>

            <NavLink class="toro-nav-link" href="client/order-assets">
                <span class="bi bi-cart3"></span>
                <span class="link-text">Order Assets</span>
            </NavLink>
        </Authorized>
    </AuthorizeView>

</div>